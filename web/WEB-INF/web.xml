<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>StaticServlet</servlet-name>
        <servlet-class>controller.StaticServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignoutServlet</servlet-name>
        <servlet-class>controller.SignoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StaticServlet</servlet-name>
        <url-pattern>/page-one</url-pattern>
        <url-pattern>/page-two</url-pattern>
        <url-pattern>/page-three</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignoutServlet</servlet-name>
        <url-pattern>/signout</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>5</session-timeout>
    </session-config>
    <error-page>
        <error-code>403</error-code>
        <location>/errors/403.jsp</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/errors/404.jsp</location>
    </error-page>
    <security-constraint>
        <display-name>SEE_PAGE_1</display-name>
        <web-resource-collection>
            <web-resource-name>PageOne</web-resource-name>
            <description/>
            <url-pattern>/page-one</url-pattern>
            <http-method>GET</http-method>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>PAGE_1</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>SEE_PAGE_2</display-name>
        <web-resource-collection>
            <web-resource-name>PageTwo</web-resource-name>
            <description/>
            <url-pattern>/page-two</url-pattern>
            <http-method>GET</http-method>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>PAGE_2</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>SEE_PAGE_3</display-name>
        <web-resource-collection>
            <web-resource-name>PageThree</web-resource-name>
            <description/>
            <url-pattern>/page-three</url-pattern>
            <http-method>GET</http-method>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>PAGE_3</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <form-login-config>
            <form-login-page>/signin.jsp</form-login-page>
            <form-error-page>/signin_fail.jsp</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description>Allows to see "page one"</description>
        <role-name>PAGE_1</role-name>
    </security-role>
    <security-role>
        <description>Allows to see "page two"</description>
        <role-name>PAGE_2</role-name>
    </security-role>
    <security-role>
        <description>Allows to see "page three"</description>
        <role-name>PAGE_3</role-name>
    </security-role>
</web-app>
